<div class="container">
    <div class="row">
        <br>
        <a href="/people/new" class="btn btn-primary">New</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name:</th>
                    <th>Last Name:</th>
                    <th>Age:</th>
                    <th colspan="2">Operation</th>
                </tr>
            </thead>
            {{#each people}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.age}}</td>
                <td><a href="/people/modify/{{this._id}}">Modify</a></td>
                <td><a href="/people/delete/{{this._id}}">Delete</a></td>
            </tr>
            {{each}}
        </table>
    </div>
</div>